{
    "builders": [{
       "type": "amazon-ebs",
       "region": "eu-west-1",
       "source_ami": "ami-844e0bf7",
       "instance_type": "t2.micro",
       "ssh_username": "ubuntu",
       "ami_name": "perfin-backend-v1"
     }],
     "provisioners": [
       {
         "type": "shell",
         "inline": ["mkdir api", "sudo apt-get update", "sudo apt-get -y install npm nodejs-legacy"],
         "pause_before": "10s"
       },
       {
         "type": "file",
         "source" : "../perfin-backend",
         "destination" : "perfin-backend"
       },
   
       {
       "type": "shell",
       "inline": ["npm install", "npm start"],
       "pause_before": "10s"
       }
     ]
   }