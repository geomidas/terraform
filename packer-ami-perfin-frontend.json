{
    "builders": [{
       "type": "amazon-ebs",
       "region": "eu-west-1",
       "source_ami": "ami-099926fbf83aa61ed",
       "instance_type": "i3.large",
       "ssh_username": "ubuntu",
       "ami_name": "perfin-frontend-v1"
     }],
     "provisioners": [
       {
         "type": "shell",
         "inline": ["sudo apt update", "sudo apt -y install npm nodejs"],
         "pause_before": "10s"
       },
       {
         "type": "file",
         "source" : "../perfin-frontend/src",
         "destination" : "./"
       },
       {
         "type": "file",
         "source": "../perfin-frontend/public",
         "destination": "./"
       },
       {
         "type": "file",
         "source": "../perfin-frontend/package.json",
         "destination": "./"
       },
       {
       "type": "shell",
       "inline": ["ls -lh", "npm -v", "node -v", "npm install", "npm install -g serve", "serve -s build &"],
       "pause_before": "10s"
       }
     ]
   }
