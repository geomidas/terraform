{
    "builders": [{
       "type": "amazon-ebs",
       "region": "eu-west-1",
       "source_ami": "ami-844e0bf7",
       "instance_type": "t2.xlarge",
       "ssh_username": "ubuntu",
       "ami_name": "perfin-frontend-v1"
     }],
     "provisioners": [
       {
         "type": "shell",
         "inline": ["pwd || sudo apt-get update && sudo apt-get -y install npm nodejs-legacy"],
         "pause_before": "10s"
       },
       {
         "type": "file",
         "source" : "../perfin-frontend",
         "destination" : "./"
       },
   
       {
       "type": "shell",
       "inline": ["pwd && ls -alh || npm install && npm start"],
       "pause_before": "10s"
       }
     ]
   }